<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="community1"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    app:layout_constraintStart_toStartOf="@id/subHeadingText"
    app:layout_constraintTop_toBottomOf="@id/subHeadingText"
    android:layout_marginTop="10dp"
    >
    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_status_border"
        android:id="@+id/status_border"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/mentorPic"
        android:src="@drawable/jack_icon"
        android:layout_gravity="center"/>

    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_status_badge"
        android:layout_gravity="top|end"/>

</FrameLayout>