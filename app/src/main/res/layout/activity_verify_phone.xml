<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashScreenBgColor"
    tools:context=".VerifyPhoneActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/upperPart"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/splashScreenBgColor"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintWidth_percent="0.1"
            android:background="@drawable/arrow_back"
            android:id="@+id/backArrow"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/verify_your_phone_number_text"
            android:textColor="@color/headingTextColor"
            android:textSize="30sp"
            android:id="@+id/headingText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/backArrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"

            android:layout_marginTop="4dp"
            android:text="@string/we_ve_sent_a_code_to_text"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintEnd_toStartOf="@id/spanText2"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:id="@+id/spanText1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/headingText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/spanText2"
            app:layout_constraintVertical_chainStyle="packed"

            android:text="@string/phone_number_text"
            android:textColor="@color/headingTextColor"
            app:layout_constraintStart_toEndOf="@id/spanText1"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/headingText" />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="55dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/pin1"
            app:layout_constraintEnd_toStartOf="@id/pin2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"

            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/spanText1"
            app:layout_constraintHorizontal_chainStyle="packed"
            >


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/secondaryTextColor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pin2"
            android:layout_width="55dp"
            android:layout_marginEnd="8dp"

            app:layout_constraintEnd_toStartOf="@id/pin3"
            app:layout_constraintVertical_chainStyle="packed"

            app:layout_constraintStart_toEndOf="@+id/pin1"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/spanText1"
            app:layout_constraintHorizontal_chainStyle="packed"
            >


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/secondaryTextColor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pin3"
            android:layout_width="55dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/pin4"
            app:layout_constraintVertical_chainStyle="packed"

            app:layout_constraintStart_toEndOf="@+id/pin2"
            android:layout_marginEnd="8dp"

            android:layout_marginTop="16dp"
            android:background="@drawable/circle"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/spanText1"
            app:layout_constraintHorizontal_chainStyle="packed"
            >


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/secondaryTextColor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pin4"
            android:layout_width="55dp"
            android:layout_height="50dp"
            app:layout_constraintVertical_chainStyle="packed"

            app:layout_constraintEnd_toStartOf="@id/pin5"
            app:layout_constraintStart_toEndOf="@+id/pin3"
            android:layout_marginEnd="8dp"

            android:layout_marginTop="16dp"
            android:background="@drawable/circle"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/spanText1"
            app:layout_constraintHorizontal_chainStyle="packed"
            >


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/secondaryTextColor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pin5"
            android:layout_width="55dp"
            app:layout_constraintVertical_chainStyle="packed"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pin4"

            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/spanText1"
            app:layout_constraintHorizontal_chainStyle="packed"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/secondaryTextColor"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintVertical_chainStyle="packed"

            android:background="@drawable/secondary_button_background"
            android:text="@string/verify_text"
            android:textColor="@color/primaryTextColor"
            android:id="@+id/verifyButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAllCaps="false"

            app:layout_constraintWidth_percent="0.5"

            app:layout_constraintTop_toBottomOf="@id/pin1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/resend_code_text"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintVertical_chainStyle="packed"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/resendCodeTimeTextView"
            android:id="@+id/resendCodeTextView"
            app:layout_constraintTop_toBottomOf="@+id/verifyButton"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/resendCodeTimeTextView"
            android:text="@string/resend_code_text2"
            app:layout_constraintVertical_chainStyle="packed"

            android:textColor="@color/headingTextColor"
            app:layout_constraintStart_toEndOf="@id/resendCodeTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/verifyButton"
            android:textSize="16sp"
            app:layout_constraintHorizontal_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/containerColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toBottomOf="@id/upperPart"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@id/number2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@id/number3"
            app:layout_constraintStart_toEndOf="@id/number1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"

            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/number2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"

            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@id/number5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number1"
            app:layout_constraintVertical_chainStyle="spread_inside"

            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@id/number6"
            app:layout_constraintStart_toEndOf="@id/number4"
            app:layout_constraintTop_toBottomOf="@id/number2"
            app:layout_constraintVertical_chainStyle="spread"

            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/number5"
            app:layout_constraintTop_toBottomOf="@id/number3"
            app:layout_constraintVertical_chainStyle="spread"

            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@id/number8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number4"
            app:layout_constraintVertical_chainStyle="spread_inside"

            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toStartOf="@id/number9"
            app:layout_constraintStart_toEndOf="@id/number7"
            app:layout_constraintTop_toBottomOf="@id/number5"
            app:layout_constraintVertical_chainStyle="spread"

            app:layout_constraintWidth_percent="0.2" />

        <TextView

            android:id="@+id/number9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/number8"
            app:layout_constraintTop_toBottomOf="@id/number6"
            app:layout_constraintVertical_chainStyle="spread"

            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/number0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/number_input"
            android:padding="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="@id/number8"
            app:layout_constraintStart_toStartOf="@id/number8"
            app:layout_constraintTop_toBottomOf="@id/number8"
            app:layout_constraintVertical_chainStyle="spread"

            app:layout_constraintWidth_percent="0.2" />

        <View
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/delete"
            app:layout_constraintBottom_toBottomOf="@id/number0"
            app:layout_constraintEnd_toEndOf="@id/number9"
            app:layout_constraintStart_toStartOf="@id/number9"
            app:layout_constraintTop_toBottomOf="@id/number9"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintWidth_percent="0.2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>